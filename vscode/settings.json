{
    "workbench.colorTheme": "One Dark Pro Vivid",
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": true,
    "window.zoomLevel": 0,
    // "editor.formatOnSave": true,
    "workbench.colorCustomizations": {
        "[One Dark Pro Vivid]": {
            "sideBar.background": "#111",
            "editor.background": "#161616",
            "editor.lineHighlightBackground": "#222",
            "tab.activeBackground": "#252525",
            "tab.inactiveBackground": "#1E1E1E",
            "activityBar.background": "#0D0D0D",
            "statusBar.background": "#111",
            "editorGroupHeader.tabsBackground": "#252525"
        }
    },
    "editor.tabSize": 2,
    "editor.renderWhitespace": "none",
    // "editor.fontFamily": "'Dank Mono'",
    "editor.fontFamily": "'Operator Mono Lig'",
    // , 'Fira Code', Menlo, Monaco, 'Courier New', monospace"
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.fontWeight": "400",
    "terminal.integrated.fontFamily": "Iosevka Term",
    "terminal.integrated.fontSize": 14,
    "editor.rulers": [
        140
    ],
    "workbench.iconTheme": "material-icon-theme"
}